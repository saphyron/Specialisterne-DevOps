{
  "metadata": [
    {
      "src": [
        { "files": [ "assemblies/*.dll" ] }
      ],
      "dest": "api",
      "disableGitFeatures": false
    }
  ],
  "build": {
    "content": [
      { "files": [ "index.md", "toc.yml", "articles/**.md" ] },
      { "files": [ "api/**.yml" ], "sidetoc": true }
    ],
    "dest": "_site",
    "globalMetadata": { "site_name": "Cereal API Docs" },
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "template": [ "default" ]
  }
}
